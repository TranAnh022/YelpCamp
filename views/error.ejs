<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <%= err.message%>
                </h4>
                <!-- //we are running in development mode -->
                    <% if (process.env.NODE_ENV !== "production") { %> 
                <p>  <%=err.stack%> </p>
                <% } %> 
            </div>

        </div>
    </div>